{
  "name": "synergy-sphere",
  "version": "1.0.0",
  "description": "A fully functional, production-ready collaborative workspace web application",
  "main": "index.js",
  "scripts": {
    "install-all": "npm run install-backend && npm run install-frontend",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install --legacy-peer-deps",
    "dev": "concurrently \"npm run dev-backend\" \"npm run dev-frontend\"",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && npm run build && npm run preview",
    "build": "npm run build-frontend",
    "build-frontend": "cd frontend && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run lint-backend && npm run lint-frontend",
    "lint-backend": "cd backend && npm run lint",
    "lint-frontend": "cd frontend && npm run lint"
  },
  "keywords": [
    "collaboration",
    "workspace",
    "tasks",
    "real-time",
    "react",
    "nodejs",
    "mongodb",
    "socketio"
  ],
  "author": "SynergySphere Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/synergy-sphere.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/synergy-sphere/issues"
  },
  "homepage": "https://github.com/yourusername/synergy-sphere#readme"
}